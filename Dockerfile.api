FROM python:3.9-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
  fastapi==0.109.0 \
  uvicorn==0.27.0 \
  mlflow==2.10.2 \
  pandas==2.1.4 \
  scikit-learn==1.4.0 \
  boto3==1.34.34 \
  pydantic==2.5.3 \
  python-multipart==0.0.6

# Copy API code
COPY ./api/ .

# Expose port
EXPOSE 8000

# Run the API
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
